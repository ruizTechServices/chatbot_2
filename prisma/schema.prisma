datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Message {
  id             String   @id @default(uuid())
  conversationId String
  positionId     Int
  text           String
  isUser         Boolean
  embedding      Json?
  createdAt      DateTime @default(now())

  @@map("messages")
}